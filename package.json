{
  "scripts": {
    "dev": "yarn dev:server & yarn dev:frontend",
    "dev:frontend": "parcel watch frontend/index.html --out-dir frontend/dist --no-hmr",
    "dev:server": "nodemon ./server --ignore frontend/ --ignore package.json --ignore yarn.lock",
    "prod": "yarn prod:build && yarn prod:server",
    "prod:build": "parcel build frontend/index.html --out-dir frontend/dist",
    "prod:server": "export NODE_ENV='production' && node ./server"
  },
  "dependencies": {
    "@brillout/proto-db": "^0.1.0",
    "core-js": "^3.3.2",
    "express": "^4.17.1",
    "react": "^16.0.0",
    "react-dom": "^16.10.2",
    "regenerator-runtime": "^0.13.3",
    "wildcard-api": "^0.7.3"
  },
  "devDependencies": {
    "nodemon": "^1.19.4",
    "parcel": "^1.12.4",
    "yarn": "^1.19.1"
  }
}
